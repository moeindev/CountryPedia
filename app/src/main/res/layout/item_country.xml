<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    style="@style/AppTheme.item.home.card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_home_height">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/item_home_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/item_home_title"
            android:layout_margin="5dp"
            tools:src="@drawable/ic_app_icon"
            android:contentDescription="@string/app_name"
            android:layout_width="@dimen/item_home_image_width"
            android:layout_height="@dimen/item_home_image_width"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_home_title"
            app:layout_constraintTop_toTopOf="@id/item_home_image"
            app:layout_constraintBottom_toTopOf="@id/item_home_region"
            app:layout_constraintStart_toEndOf="@id/item_home_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="5dp"
            tools:text="@string/app_name"
            style="@style/AppTheme.item.home.title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textview.MaterialTextView
            app:layout_constraintTop_toBottomOf="@id/item_home_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/item_home_region"
            android:layout_margin="5dp"
            tools:text="@string/app_name"
            style="@style/AppTheme.item.home.subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>