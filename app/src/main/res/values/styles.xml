<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/avenir</item>
        <item name="md_font_title">@font/avenir_book</item>
        <item name="md_font_body">@font/avenir_roman</item>
        <item name="md_font_button">@font/avenir_medium</item>
    </style>

    <style name="AppTheme.noConnection.tryAgain" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/avenir</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/avenir</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">14sp</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">18sp</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="AppTheme.home.searchTextAppearance" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/avenir</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:autoSizeMinTextSize" tools:ignore="NewApi">18sp</item>
        <item name="android:autoSizeMaxTextSize" tools:ignore="NewApi">20sp</item>
    </style>

    <style name="AppTheme.home.searchTextTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/search_box_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:enabled">true</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="hintTextAppearance">@style/AppTheme.home.searchTextAppearance</item>
        <item name="fontFamily">@font/avenir</item>
        <item name="android:textAppearance">@style/AppTheme.home.searchTextAppearance</item>
    </style>

    <style name="AppTheme.home.searchTextEditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/AppTheme.home.searchTextAppearance</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/avenir</item>
    </style>
    
    
    <style name="AppTheme.item.home.card" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="elevation">0dp</item>
        <item name="android:radius">5dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppTheme.item.home.title" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/avenir</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:autoSizeMinTextSize" tools:ignore="NewApi">14sp</item>
        <item name="android:autoSizeMaxTextSize" tools:ignore="NewApi">16sp</item>
    </style>
    <style name="AppTheme.item.home.subtitle" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/avenir</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="alpha">0.6</item>
        <item name="android:autoSizeMinTextSize" tools:ignore="NewApi">12sp</item>
        <item name="android:autoSizeMaxTextSize" tools:ignore="NewApi">14sp</item>
    </style>


    <style name="AppTheme.detail.title" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/avenir</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:autoSizeMinTextSize" tools:ignore="NewApi">18sp</item>
        <item name="android:autoSizeMaxTextSize" tools:ignore="NewApi">20sp</item>
    </style>

    <style name="AppTheme.detail.detail" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/avenir</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:autoSizeMinTextSize" tools:ignore="NewApi">16sp</item>
        <item name="android:autoSizeMaxTextSize" tools:ignore="NewApi">18sp</item>
    </style>

    <style name="AppTheme.detail.card" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="elevation">0dp</item>
        <item name="android:radius">5dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:clickable">true</item>
    </style>
</resources>